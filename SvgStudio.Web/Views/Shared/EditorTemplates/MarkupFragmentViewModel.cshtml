@model SvgStudio.Web.ViewModels.Shared.MarkupFragmentViewModel

<div class="col-lg-12">
    <div class="form-group">
        @Html.HiddenFor(x => x.Id)
        <label for="@Html.NameFor(x => x.Content)">XML</label>
        <div style="border: 1px solid gray;">
            @Html.TextAreaFor(x => x.Content, new { rows = 8, @class = "form-control xml-editor" })
        </div>
    </div>
</div>